<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="drawable/photo.jpg"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вход"
        android:textStyle="bold"
        android:textSize="34dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="480dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/titleSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Добро пожаловать!"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="120dp"
        />
    <TextView
        android:id="@+id/titleThird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выполните вход или зарегистрируйтесь."
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintEnd_toEndOf="@id/title"
        android:paddingStart="100dp"
        android:paddingEnd="100dp"
        app:layout_constraintTop_toBottomOf="@id/titleSecond"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/titleFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:paddingHorizontal="100dp"
        android:text="Введите вашу почту"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleThird" />
    <TextView
        android:id="@+id/titleFive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введите пароль"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="100dp"
        app:layout_constraintTop_toBottomOf="@id/titleFour"
        app:layout_constraintStart_toStartOf="10dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ВОЙТИ"
        android:textSize="10dp"
        android:textStyle="bold"
        android:layout_marginTop="350dp"
        android:layout_marginHorizontal="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Забыли пароль"
        android:layout_marginTop="470dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>